@model EM.Domain.Cidade

@{
    var isEdit = ViewBag.IsEdit != null ? (bool)ViewBag.IsEdit : (Model?.Id > 0);
    ViewData["Title"] = isEdit ? "Edição de Cidade" : "Adicionar Cidade";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi @(isEdit ? "bi-pencil-square" : "bi-geo-plus")"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="@(isEdit ? "Edit" : "Create")" asp-route-id="@(isEdit && Model != null ? Model.Id : 0)" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                @if (isEdit)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="NomeDaCidade" class="form-label">
                            Nome da Cidade *
                            <span asp-validation-for="NomeDaCidade" class="text-danger"></span>
                        </label>
                        <input asp-for="NomeDaCidade" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="UF" class="form-label">
                            UF *
                            <span asp-validation-for="UF" class="text-danger"></span>
                        </label>
                        <select asp-for="UF" asp-items="ViewBag.UFList" class="form-select" required>
                            <option value="">Selecione uma UF</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="button" id="btnSalvar" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalConfirmarOperacao" tabindex="-1" aria-labelledby="modalConfirmarOperacaoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalConfirmarOperacaoLabel">
                    <i class="bi bi-question-circle"></i> Confirmar Operação
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Confirmar a operação?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="btnConfirmarOperacao">
                    <i class="bi bi-check-circle"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnSalvar = document.getElementById('btnSalvar');
            if (btnSalvar) {
                btnSalvar.addEventListener('click', function(e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    const isValid = form.checkValidity();
                    
                    if (isValid) {
                        const modalElement = document.getElementById('modalConfirmarOperacao');
                        if (modalElement) {
                            const modal = new bootstrap.Modal(modalElement);
                            modal.show();
                        }
                    } else {
                        form.reportValidity();
                    }
                });
            }

            const btnConfirmarOperacao = document.getElementById('btnConfirmarOperacao');
            if (btnConfirmarOperacao) {
                btnConfirmarOperacao.addEventListener('click', function() {
                    const btnSalvar = document.getElementById('btnSalvar');
                    if (btnSalvar) {
                        const form = btnSalvar.closest('form');
                        if (form) {
                            btnSalvar.disabled = true;
                            form.submit();
                        }
                    }
                });
            }
        });
    </script>
}
