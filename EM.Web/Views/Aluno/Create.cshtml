@model EM.Domain.Aluno

@{
    var isEdit = ViewBag.IsEdit != null ? (bool)ViewBag.IsEdit : (Model?.Matricula > 0);
    ViewData["Title"] = isEdit ? "Edição de Aluno" : "Adicionar Aluno";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi @(isEdit ? "bi-pencil-square" : "bi-person-plus")"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="@(isEdit ? "Edit" : "Create")" asp-route-matricula="@(isEdit && Model != null ? Model.Matricula : 0)" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                @if (isEdit)
                {
                    <input type="hidden" asp-for="Matricula" />
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Matricula" class="form-label">
                            Matrícula *
                            <span asp-validation-for="Matricula" class="text-danger"></span>
                        </label>
                        @if (isEdit)
                        {
                            <input asp-for="Matricula" class="form-control" type="number" readonly />
                        }
                        else
                        {
                            <input asp-for="Matricula" class="form-control" type="number" required />
                        }
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Nome" class="form-label">
                            Nome *
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </label>
                        <input asp-for="Nome" class="form-control" maxlength="100" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Cpf" class="form-label">
                            CPF (opcional)
                            <span asp-validation-for="Cpf.Value" class="text-danger"></span>
                        </label>
                        <input asp-for="Cpf.Value" class="form-control" placeholder="000.000.000-00" />
                        <small class="form-text text-muted">Deixe em branco se não possuir</small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DataNascimento" class="form-label">
                            Data de Nascimento *
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </label>
                        <input asp-for="DataNascimento" class="form-control" type="date" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Sexo" class="form-label">
                            Sexo *
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </label>
                        <select asp-for="Sexo" asp-items="ViewBag.SexoList" class="form-select" required>
                            <option value="">Selecione o sexo</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="CidadeId" class="form-label">
                            Cidade *
                            <span asp-validation-for="CidadeId" class="text-danger"></span>
                        </label>
                        <select asp-for="CidadeId" asp-items="ViewBag.CidadeList" class="form-select" required>
                            <option value="">Selecione uma cidade</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="button" id="btnSalvar" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalConfirmarOperacao" tabindex="-1" aria-labelledby="modalConfirmarOperacaoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalConfirmarOperacaoLabel">
                    <i class="bi bi-question-circle"></i> Confirmar Operação
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Confirmar a operação?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary" id="btnConfirmarOperacao">
                    <i class="bi bi-check-circle"></i> Confirmar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cpfInput = document.querySelector('input[name="Cpf.Value"]');
            if (cpfInput) {
                cpfInput.removeAttribute('required');
                cpfInput.removeAttribute('data-val');
                cpfInput.removeAttribute('data-val-required');
                cpfInput.removeAttribute('aria-required');
                cpfInput.classList.remove('input-validation-error');
            }

            const btnSalvar = document.getElementById('btnSalvar');
            if (btnSalvar) {
                btnSalvar.addEventListener('click', function(e) {
                    e.preventDefault();
                    const form = this.closest('form');
                    const isValid = form.checkValidity();
                    
                    if (isValid) {
                        const modalElement = document.getElementById('modalConfirmarOperacao');
                        if (modalElement) {
                            const modal = new bootstrap.Modal(modalElement);
                            modal.show();
                        }
                    } else {
                        form.reportValidity();
                    }
                });
            }

            const btnConfirmarOperacao = document.getElementById('btnConfirmarOperacao');
            if (btnConfirmarOperacao) {
                btnConfirmarOperacao.addEventListener('click', function() {
                    const btnSalvar = document.getElementById('btnSalvar');
                    if (btnSalvar) {
                        const form = btnSalvar.closest('form');
                        if (form) {
                            btnSalvar.disabled = true;
                            form.submit();
                        }
                    }
                });
            }
        });
    </script>
}
