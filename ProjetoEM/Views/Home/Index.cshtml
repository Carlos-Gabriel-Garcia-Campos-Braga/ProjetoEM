@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <img src="~/Icons/EscolarManagerIcon.png" alt="Sistema Escolar" class="mb-4" style="max-width: 150px;" />
        <h1 class="display-4 text-primary">Sistema de Gerenciamento Escolar</h1>
        <p class="lead text-muted">Gerencie alunos e cidades de forma simples e eficiente</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-people" style="font-size: 4rem; color: #0d6efd;"></i>
                    </div>
                    <h3 class="card-title text-primary">Gerenciar Alunos</h3>
                    <p class="card-text text-muted">
                        Cadastre, edite, exclua e busque alunos do sistema. 
                        Gerencie informações completas como matrícula, nome, CPF, sexo e cidade.
                    </p>
                    <a asp-controller="Aluno" asp-action="Index" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-arrow-right-circle"></i> Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-geo-alt" style="font-size: 4rem; color: #0d6efd;"></i>
                    </div>
                    <h3 class="card-title text-primary">Gerenciar Cidades</h3>
                    <p class="card-text text-muted">
                        Cadastre e gerencie as cidades disponíveis no sistema. 
                        Configure nome e UF para cada cidade.
                    </p>
                    <a asp-controller="Cidade" asp-action="Index" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-arrow-right-circle"></i> Acessar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info" role="alert">
                <h5 class="alert-heading"><i class="bi bi-info-circle"></i> Funcionalidades do Sistema</h5>
                <hr>
                <ul class="mb-0">
                    <li><strong>CRUD Completo:</strong> Create, Read, Update e Delete para Alunos e Cidades</li>
                    <li><strong>Busca Avançada:</strong> Encontre alunos por matrícula ou nome</li>
                    <li><strong>Validações:</strong> CPF, nome obrigatório e campos formatados</li>
                    <li><strong>Interface Moderna:</strong> Design responsivo com Bootstrap 5</li>
                </ul>
            </div>
        </div>
    </div>
</div>

