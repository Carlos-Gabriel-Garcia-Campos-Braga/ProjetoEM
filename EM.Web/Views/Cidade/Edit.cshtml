@model EM.Domain.Cidade

@{
    ViewData["Title"] = "Editar Cidade";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> @ViewData["Title"]
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Id" class="form-label">ID *</label>
                        <input asp-for="Id" class="form-control" type="number" readonly />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NomeDaCidade" class="form-label">Nome da Cidade *</label>
                        <input asp-for="NomeDaCidade" class="form-control" required />
                        <span asp-validation-for="NomeDaCidade" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="UF" class="form-label">UF *</label>
                        <select asp-for="UF" asp-items="ViewBag.UFList" class="form-select" required>
                            <option value="">Selecione uma UF</option>
                        </select>
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Salvar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
